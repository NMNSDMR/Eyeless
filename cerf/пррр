def posZero(servo_pin2, servo_pin1, servo_pin5, servo_pin4):
    n1_current = -70  # Current position of servo 1
    n2_current = 40   # Current position of servo 2
    n1_target = -30   # Target position for servo 1
    n2_target = 40    # Target position for servo 2

    # Gradually move servos back to initial position
    while n1_current < n1_target or n2_current > n2_target:
        if n1_current < n1_target:
            n1_current += 1
        if n2_current > n2_target:
            n2_current -= 1
        
        set_angle_two_servo(n1_current, servo_pin2, servo_pin1)
        set_angle_two_servo(n2_current, servo_pin5, servo_pin4)
        time.sleep(0.05)