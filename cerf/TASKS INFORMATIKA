N = 15  # Объем молока в цистерне

# Инициализируем переменные для хранения количества бидонов каждого объема
bucket_6 = 0
bucket_5 = 0
bucket_1 = 0

# Разливаем молоко в бидоны
while N > 0:
    if N >= 6:
        bucket_6 += 1
        N -= 6
    elif N >= 5:
        bucket_5 += 1
        N -= 5
    else:
        bucket_1 += 1
        N -= 1

# Выводим результат
print("Бидоны объемом 6 литров:", bucket_6)
print("Бидоны объемом 5 литров:", bucket_5)
print("Бидоны объемом 1 литр:", bucket_1)
