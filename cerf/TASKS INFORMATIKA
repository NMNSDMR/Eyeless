N = int(input("Введите количество литров молока в цистерне: "))

# Создаем список, чтобы хранить количество бидонов каждого объема
buckets = [0, 0, 0]  # Индекс 0 соответствует бидону объемом 1 литр, индекс 1 - 5 литров, индекс 2 - 6 литров

# Пока остаток молока больше 0
while N > 0:
    if N >= 6:  # Если остаток молока больше или равен 6 литрам
        buckets[2] += 1  # Используем бидон объемом 6 литров
        N -= 6  # Уменьшаем остаток молока на 6 литров
    elif N >= 5:  # Если остаток молока больше или равен 5 литрам
        buckets[1] += 1  # Используем бидон объемом 5 литров
        N -= 5  # Уменьшаем остаток молока на 5 литров
    else:  # Иначе остаток молока меньше 5 литров
        buckets[0] += 1  # Используем бидон объемом 1 литр
        N -= 1  # Уменьшаем остаток молока на 1 литр

# Выводим количество использованных бидонов каждого объема
print("Количество бидонов объемом 1 литр:", buckets[0])
print("Количество бидонов объемом 5 литров:", buckets[1])
print("Количество бидонов объемом 6 литров:", buckets[2])
